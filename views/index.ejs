<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>WebRTC Live Streaming</title>
		<style>
			.video_container{
				display:grid;
				grid-template-columns:1fr 1fr;
			}
			
			.video_container:-webkit-full-screen{
				width:100%;
				height:100%;
			}
			.video_container > div{
				background:#eee;
				padding:1em;
			}
			.video_container > div:nth-child(odd){
				background:#ddd;
			}
		</style>
	</head>
	<body>
		<div class="log_in">
			<input type="text" id="username"/>
			<button id='button_username'>confirm username</button>
		
		</div>

		<div class="video_container">
			<div>
			<canvas id="self_video" ></canvas>
			</div>
			<div>
			<canvas id="partner_video"></canvas>
			</div>
		</div>

		<div>

			<button id='fullscreen'>Full Screen</button>
			<input type="text" id="partner_name"/>
			<button id='call'>Make a call</button>
			<button id='hangup'> Hang up the call</button>
		</div>

	</body>

		<script src="/assets/client.js"></script>
</html>
